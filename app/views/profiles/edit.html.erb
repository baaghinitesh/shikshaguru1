<div class="min-h-screen bg-base-200">
  <div class="container mx-auto px-4 py-8">
    <div class="max-w-4xl mx-auto">
      <!-- Page Title -->
      <div class="mb-8">
        <h1 class="text-3xl font-bold text-primary">Edit Profile</h1>
        <p class="text-base-content/70 mt-2">Update your personal information and manage your files</p>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Profile Picture Upload -->
        <div class="lg:col-span-1">
          <div class="card bg-base-100 shadow-xl">
            <div class="card-body text-center">
              <h2 class="card-title justify-center mb-4">Profile Picture</h2>
              
              <div class="avatar mb-4">
                <div class="w-32 rounded-full ring ring-primary ring-offset-base-100 ring-offset-2">
                  <% if @user.profile_picture.attached? %>
                    <%= image_tag @user.profile_picture.variant(resize_to_fill: [128, 128, { gravity: 'center' }]), 
                                 id: "profile-picture-preview",
                                 class: "w-full h-full object-cover rounded-full" %>
                  <% else %>
                    <div id="profile-picture-preview" class="w-full h-full bg-neutral text-neutral-content rounded-full flex items-center justify-center text-4xl font-bold">
                      <%= @user.display_name.first.upcase %>
                    </div>
                  <% end %>
                </div>
              </div>

              <div class="space-y-2">
                <input type="file" id="profile-picture-input" accept="image/*" class="file-input file-input-bordered file-input-primary w-full" />
                <div class="text-xs text-base-content/60">
                  Max 2MB • JPG, PNG, GIF, WebP
                </div>
                <% if @user.profile_picture.attached? %>
                  <button type="button" id="remove-profile-picture" class="btn btn-sm btn-error btn-outline w-full">
                    Remove Picture
                  </button>
                <% end %>
              </div>
            </div>
          </div>

          <!-- File Storage Info -->
          <div class="card bg-base-100 shadow-xl mt-4">
            <div class="card-body">
              <h3 class="font-semibold mb-2">Storage Usage</h3>
              <div class="w-full bg-gray-200 rounded-full h-2.5">
                <div class="bg-primary h-2.5 rounded-full" style="width: <%= @user.file_storage_percentage %>%"></div>
              </div>
              <div class="text-xs text-base-content/60 mt-1">
                <%= number_to_human_size(@user.total_file_size) %> of 50MB used (<%= @user.file_storage_percentage %>%)
              </div>
            </div>
          </div>
        </div>

        <!-- Main Form -->
        <div class="lg:col-span-2">
          <div class="card bg-base-100 shadow-xl">
            <div class="card-body">
              <%= form_with(model: @user, url: profile_path, local: true, class: "space-y-6") do |form| %>
                <% if @user.errors.any? %>
                  <div class="alert alert-error">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 shrink-0">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m-9-.75a9 9 0 0118 0 9 9 0 01-18 0z" />
                    </svg>
                    <div>
                      <h3 class="font-bold">Please fix the following errors:</h3>
                      <ul class="mt-2">
                        <% @user.errors.full_messages.each do |message| %>
                          <li><%= message %></li>
                        <% end %>
                      </ul>
                    </div>
                  </div>
                <% end %>

                <!-- Basic Information -->
                <div class="divider">
                  <span class="text-lg font-medium">Basic Information</span>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                  <div class="form-control">
                    <%= form.label :name, class: "label" do %>
                      <span class="label-text font-medium">Full Name *</span>
                    <% end %>
                    <%= form.text_field :name, required: true, autocomplete: "name", 
                            class: "input input-bordered w-full #{'input-error' if @user.errors[:name].any?}" %>
                    <% if @user.errors[:name].any? %>
                      <div class="label">
                        <span class="label-text-alt text-error"><%= @user.errors[:name].first %></span>
                      </div>
                    <% end %>
                  </div>

                  <div class="form-control">
                    <%= form.label :email, class: "label" do %>
                      <span class="label-text font-medium">Email *</span>
                    <% end %>
                    <%= form.email_field :email, required: true, autocomplete: "email", 
                            class: "input input-bordered w-full #{'input-error' if @user.errors[:email].any?}" %>
                    <% if @user.errors[:email].any? %>
                      <div class="label">
                        <span class="label-text-alt text-error"><%= @user.errors[:email].first %></span>
                      </div>
                    <% end %>
                  </div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                  <div class="form-control">
                    <%= form.label :phone, class: "label" do %>
                      <span class="label-text font-medium">Phone Number</span>
                    <% end %>
                    <%= form.telephone_field :phone, autocomplete: "tel", 
                            class: "input input-bordered w-full", 
                            placeholder: "+91 98765 43210" %>
                  </div>

                  <div class="form-control">
                    <%= form.label :location, class: "label" do %>
                      <span class="label-text font-medium">Location</span>
                    <% end %>
                    <%= form.text_field :location, autocomplete: "address-level2", 
                            class: "input input-bordered w-full", 
                            placeholder: "City, State" %>
                  </div>
                </div>

                <!-- Role-specific fields -->
                <% if @user.teacher? %>
                  <div class="divider">
                    <span class="text-lg font-medium">Teaching Information</span>
                  </div>

                  <div class="form-control">
                    <%= form.label :bio, class: "label" do %>
                      <span class="label-text font-medium">About Me</span>
                    <% end %>
                    <%= form.text_area :bio, rows: 4, 
                            class: "textarea textarea-bordered w-full", 
                            placeholder: "Tell students about your teaching experience, methodology, and achievements..." %>
                  </div>

                  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div class="form-control">
                      <%= form.label :experience_years, class: "label" do %>
                        <span class="label-text font-medium">Years of Experience</span>
                      <% end %>
                      <%= form.number_field :experience_years, min: 0, max: 50, 
                              class: "input input-bordered w-full" %>
                    </div>

                    <div class="form-control">
                      <%= form.label :qualification, class: "label" do %>
                        <span class="label-text font-medium">Highest Qualification</span>
                      <% end %>
                      <%= form.text_field :qualification, 
                              class: "input input-bordered w-full", 
                              placeholder: "B.Tech, M.Sc., PhD, etc." %>
                    </div>
                  </div>

                  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div class="form-control">
                      <%= form.label :hourly_rate_min, class: "label" do %>
                        <span class="label-text font-medium">Minimum Hourly Rate (₹)</span>
                      <% end %>
                      <%= form.number_field :hourly_rate_min, min: 0, step: 50, 
                              class: "input input-bordered w-full" %>
                    </div>

                    <div class="form-control">
                      <%= form.label :hourly_rate_max, class: "label" do %>
                        <span class="label-text font-medium">Maximum Hourly Rate (₹)</span>
                      <% end %>
                      <%= form.number_field :hourly_rate_max, min: 0, step: 50, 
                              class: "input input-bordered w-full" %>
                    </div>
                  </div>

                  <div class="form-control">
                    <%= form.label :preferred_subjects, class: "label" do %>
                      <span class="label-text font-medium">Subjects You Teach</span>
                    <% end %>
                    <%= form.text_field :preferred_subjects, 
                            class: "input input-bordered w-full", 
                            placeholder: "Mathematics, Physics, Chemistry (comma-separated)" %>
                  </div>

                  <div class="form-control">
                    <label class="label">
                      <span class="label-text font-medium">Teaching Preferences</span>
                    </label>
                    <div class="flex flex-wrap gap-4">
                      <label class="label cursor-pointer">
                        <%= form.check_box :online_teaching, class: "checkbox checkbox-primary" %>
                        <span class="label-text ml-2">Online Teaching</span>
                      </label>
                      <label class="label cursor-pointer">
                        <%= form.check_box :in_person_teaching, class: "checkbox checkbox-primary" %>
                        <span class="label-text ml-2">In-Person Teaching</span>
                      </label>
                    </div>
                  </div>
                <% elsif @user.institute? %>
                  <div class="divider">
                    <span class="text-lg font-medium">Institute Information</span>
                  </div>

                  <div class="form-control">
                    <%= form.label :institute_name, class: "label" do %>
                      <span class="label-text font-medium">Institute Name</span>
                    <% end %>
                    <%= form.text_field :institute_name, 
                            class: "input input-bordered w-full", 
                            placeholder: "Your Institute/School/College Name" %>
                  </div>

                  <div class="form-control">
                    <%= form.label :bio, class: "label" do %>
                      <span class="label-text font-medium">About Institute</span>
                    <% end %>
                    <%= form.text_area :bio, rows: 4, 
                            class: "textarea textarea-bordered w-full", 
                            placeholder: "Describe your institute, facilities, achievements..." %>
                  </div>

                  <div class="form-control">
                    <%= form.label :website_url, class: "label" do %>
                      <span class="label-text font-medium">Website URL</span>
                    <% end %>
                    <%= form.url_field :website_url, 
                            class: "input input-bordered w-full", 
                            placeholder: "https://your-institute.com" %>
                  </div>
                <% else %>
                  <div class="form-control">
                    <%= form.label :bio, class: "label" do %>
                      <span class="label-text font-medium">About Me</span>
                    <% end %>
                    <%= form.text_area :bio, rows: 3, 
                            class: "textarea textarea-bordered w-full", 
                            placeholder: "Tell us about yourself..." %>
                  </div>
                <% end %>

                <!-- Privacy Settings -->
                <div class="divider">
                  <span class="text-lg font-medium">Privacy & Consent</span>
                </div>

                <div class="space-y-3">
                  <label class="label cursor-pointer justify-start">
                    <%= form.check_box :consent_profile_display, class: "checkbox checkbox-primary" %>
                    <div class="ml-3">
                      <span class="label-text font-medium">Make my profile publicly visible</span>
                      <div class="text-sm text-base-content/60">Allow other users to find and view your profile</div>
                    </div>
                  </label>

                  <label class="label cursor-pointer justify-start">
                    <%= form.check_box :consent_data_usage, class: "checkbox checkbox-primary" %>
                    <div class="ml-3">
                      <span class="label-text font-medium">Allow data usage for matching</span>
                      <div class="text-sm text-base-content/60">Help us suggest better matches based on your preferences</div>
                    </div>
                  </label>

                  <label class="label cursor-pointer justify-start">
                    <%= form.check_box :marketing_emails, class: "checkbox checkbox-primary" %>
                    <div class="ml-3">
                      <span class="label-text font-medium">Receive marketing emails</span>
                      <div class="text-sm text-base-content/60">Get updates about new features and opportunities</div>
                    </div>
                  </label>
                </div>

                <div class="flex flex-col sm:flex-row gap-4 pt-6">
                  <%= form.submit "Save Changes", class: "btn btn-primary" %>
                  <%= link_to "Cancel", profile_path, class: "btn btn-ghost" %>
                  <%= link_to "Change Password", edit_password_profile_path, class: "btn btn-outline" %>
                </div>
              <% end %>
            </div>
          </div>

          <!-- Documents Section -->
          <div class="card bg-base-100 shadow-xl mt-6">
            <div class="card-body">
              <h2 class="card-title">Documents & Certificates</h2>
              <p class="text-base-content/70 mb-4">Upload your teaching certificates, qualifications, and other relevant documents</p>

              <!-- Upload Area -->
              <div class="border-2 border-dashed border-base-300 rounded-lg p-6 text-center">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-12 h-12 mx-auto text-base-content/40 mb-4">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M12 16.5V9.75m0 0l3 3m-3-3l-3 3M6.75 19.5a4.5 4.5 0 01-1.41-8.775 5.25 5.25 0 0110.233-2.33 3 3 0 013.758 3.848A3.752 3.752 0 0118 19.5H6.75z" />
                </svg>
                <div class="space-y-2">
                  <input type="file" id="documents-input" accept=".pdf,.doc,.docx,.jpg,.jpeg,.png" multiple class="file-input file-input-bordered file-input-primary w-full max-w-xs" />
                  <div class="text-sm text-base-content/60">
                    PDF, DOC, DOCX, JPG, PNG • Max 2MB each
                  </div>
                </div>
              </div>

              <!-- Existing Documents -->
              <div id="documents-list" class="mt-6">
                <% if @user.has_documents? || @user.has_certificates? %>
                  <h3 class="font-medium mb-3">Your Documents</h3>
                  <div class="space-y-2">
                    <% @user.documents.each do |document| %>
                      <div class="flex items-center justify-between p-3 bg-base-200 rounded-lg">
                        <div class="flex items-center space-x-3">
                          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 14.25v-2.625a3.375 3.375 0 00-3.375-3.375h-4.5B6.375 8.25 3 11.625 3 15v2.25A2.25 2.25 0 005.25 19.5h13.5a2.25 2.25 0 002.25-2.25z" />
                          </svg>
                          <div>
                            <div class="font-medium"><%= document.filename %></div>
                            <div class="text-sm text-base-content/60"><%= number_to_human_size(document.byte_size) %></div>
                          </div>
                        </div>
                        <button type="button" class="btn btn-sm btn-error btn-outline delete-document" data-attachment-id="<%= document.id %>" data-attachment-name="documents">
                          Delete
                        </button>
                      </div>
                    <% end %>

                    <% @user.certificates.each do |certificate| %>
                      <div class="flex items-center justify-between p-3 bg-base-200 rounded-lg">
                        <div class="flex items-center space-x-3">
                          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M16.5 18.75h-9m9 0a3 3 0 013 3h-15a3 3 0 013-3m9 0v-3.375c0-.621-.503-1.125-1.125-1.125h-.871M7.5 18.75v-3.375c0-.621.504-1.125 1.125-1.125h.872m5.007 0H9.497m5.007 0a7.454 7.454 0 01-.982-3.172M9.497 14.25a7.454 7.454 0 00.981-3.172M15.75 4.5V2.25m0 0h-7.5m7.5 0V0m-7.5 2.25h7.5m0 0V4.5m-7.5-2.25V4.5" />
                          </svg>
                          <div>
                            <div class="font-medium"><%= certificate.filename %></div>
                            <div class="text-sm text-base-content/60"><%= number_to_human_size(certificate.byte_size) %></div>
                          </div>
                        </div>
                        <button type="button" class="btn btn-sm btn-error btn-outline delete-document" data-attachment-id="<%= certificate.id %>" data-attachment-name="certificates">
                          Delete
                        </button>
                      </div>
                    <% end %>
                  </div>
                <% else %>
                  <div class="text-center text-base-content/60 py-8">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-16 h-16 mx-auto mb-4 opacity-40">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 14.25v-2.625a3.375 3.375 0 00-3.375-3.375h-4.5B6.375 8.25 3 11.625 3 15v2.25A2.25 2.25 0 005.25 19.5h13.5a2.25 2.25 0 002.25-2.25z" />
                    </svg>
                    <p>No documents uploaded yet</p>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%= content_for :javascript do %>
<script>
  // Profile Picture Upload
  document.getElementById('profile-picture-input').addEventListener('change', function(e) {
    const file = e.target.files[0];
    if (!file) return;
    
    // Validate file size
    if (file.size > 2 * 1024 * 1024) {
      alert('File size must be less than 2MB');
      e.target.value = '';
      return;
    }
    
    // Preview image
    const reader = new FileReader();
    reader.onload = function(e) {
      const preview = document.getElementById('profile-picture-preview');
      preview.innerHTML = `<img src="${e.target.result}" class="w-full h-full object-cover rounded-full" alt="Profile preview">`;
    };
    reader.readAsDataURL(file);
    
    // Upload file
    uploadFile(file, 'image', 'profile_picture');
  });
  
  // Documents Upload
  document.getElementById('documents-input').addEventListener('change', function(e) {
    const files = Array.from(e.target.files);
    
    files.forEach(file => {
      // Validate file size
      if (file.size > 2 * 1024 * 1024) {
        alert(`File ${file.name} is too large. Max size is 2MB.`);
        return;
      }
      
      uploadFile(file, 'document', 'documents');
    });
    
    // Clear input
    e.target.value = '';
  });
  
  // Remove Profile Picture
  const removeButton = document.getElementById('remove-profile-picture');
  if (removeButton) {
    removeButton.addEventListener('click', function() {
      if (confirm('Are you sure you want to remove your profile picture?')) {
        deleteFile('<%= @user.profile_picture.id if @user.profile_picture.attached? %>', 'profile_picture');
      }
    });
  }
  
  // Delete Document Buttons
  document.querySelectorAll('.delete-document').forEach(button => {
    button.addEventListener('click', function() {
      const attachmentId = this.dataset.attachmentId;
      const attachmentName = this.dataset.attachmentName;
      const filename = this.closest('.rounded-lg').querySelector('.font-medium').textContent;
      
      if (confirm(`Are you sure you want to delete ${filename}?`)) {
        deleteFile(attachmentId, attachmentName);
      }
    });
  });
  
  // Upload File Function
  function uploadFile(file, fileType, attachmentName) {
    const formData = new FormData();
    formData.append('file', file);
    formData.append('file_type', fileType);
    formData.append('attachment_name', attachmentName);
    
    // Show loading indicator
    const loadingToast = showToast('Uploading file...', 'info');
    
    fetch('/file_uploads', {
      method: 'POST',
      headers: {
        'X-CSRF-Token': document.querySelector('[name="csrf-token"]').content
      },
      body: formData
    })
    .then(response => response.json())
    .then(data => {
      hideToast(loadingToast);
      
      if (data.status === 'success') {
        showToast('File uploaded successfully!', 'success');
        // Reload page to show updated files
        setTimeout(() => window.location.reload(), 1000);
      } else {
        showToast('Upload failed: ' + (data.errors ? data.errors.join(', ') : data.message), 'error');
      }
    })
    .catch(error => {
      hideToast(loadingToast);
      console.error('Upload error:', error);
      showToast('Upload failed. Please try again.', 'error');
    });
  }
  
  // Delete File Function
  function deleteFile(attachmentId, attachmentName) {
    fetch(`/file_uploads/${attachmentId}`, {
      method: 'DELETE',
      headers: {
        'X-CSRF-Token': document.querySelector('[name="csrf-token"]').content,
        'Content-Type': 'application/json'
      },
      body: JSON.stringify({
        attachment_name: attachmentName,
        attachment_id: attachmentId
      })
    })
    .then(response => response.json())
    .then(data => {
      if (data.status === 'success') {
        showToast('File deleted successfully!', 'success');
        // Reload page to show updated files
        setTimeout(() => window.location.reload(), 1000);
      } else {
        showToast('Delete failed: ' + data.message, 'error');
      }
    })
    .catch(error => {
      console.error('Delete error:', error);
      showToast('Delete failed. Please try again.', 'error');
    });
  }
  
  // Toast Functions
  function showToast(message, type) {
    const toast = document.createElement('div');
    toast.className = `toast toast-top toast-end`;
    toast.innerHTML = `
      <div class="alert alert-${type === 'success' ? 'success' : type === 'error' ? 'error' : 'info'}">
        <span>${message}</span>
      </div>
    `;
    document.body.appendChild(toast);
    return toast;
  }
  
  function hideToast(toast) {
    if (toast && toast.parentNode) {
      toast.parentNode.removeChild(toast);
    }
  }
</script>
<% end %>