<% content_for :title, "ShikshaGuru - " %>

<!-- Hero Section -->
<div class="hero min-h-screen bg-gradient-to-br from-primary/20 to-secondary/20">
  <div class="hero-content text-center">
    <div class="max-w-4xl">
      <h1 class="text-5xl md:text-7xl font-bold mb-8">
        <span class="text-primary">शिक्षा</span><span class="text-secondary">Guru</span>
      </h1>
      <p class="text-2xl md:text-3xl font-semibold mb-6 text-base-content/80">
        A fully free platform for teachers and students that connects them directly — no intermediaries required.
      </p>
      <p class="py-6 text-lg max-w-2xl mx-auto text-base-content/70">
        Whether you're a student seeking knowledge or a teacher ready to share wisdom, ShikshaGuru brings you together in a seamless, free educational ecosystem.
      </p>
      
      <!-- Quick Search Box -->
      <div class="max-w-2xl mx-auto mb-8">
        <%= form_with url: search_path, method: :get, local: true, 
                      html: { class: 'flex flex-col md:flex-row gap-4 items-center' } do |f| %>
          <div class="flex-1 w-full md:w-auto">
            <%= f.text_field :q, 
                            placeholder: "Search for subjects, teachers, or locations...",
                            class: "input input-bordered input-lg w-full text-center md:text-left" %>
          </div>
          <div class="flex gap-2">
            <%= f.submit "Find Teachers", 
                        name: 'user_type', 
                        value: 'teacher',
                        class: "btn btn-primary btn-lg" %>
            <%= f.submit "Find Students", 
                        name: 'user_type', 
                        value: 'student',
                        class: "btn btn-secondary btn-lg" %>
          </div>
        <% end %>
      </div>
      
      <div class="space-y-4 md:space-y-0 md:space-x-4 md:flex md:justify-center">
        <%= link_to "Advanced Search", search_path, class: "btn btn-outline btn-lg" %>
        <%= link_to "Join as Teacher", sign_up_path, class: "btn btn-ghost btn-lg" %>
        <%= link_to "Browse Features", "#features", class: "btn btn-ghost btn-lg" %>
      </div>
    </div>
  </div>
</div>

<!-- Features Section -->
