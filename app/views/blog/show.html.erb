<% content_for :title, @blog_post.seo_title %>

<div class="container mx-auto px-4 py-8">
  <div class="max-w-4xl mx-auto">
    <!-- Breadcrumbs -->
    <nav class="breadcrumbs text-sm mb-8">
      <ul>
        <% blog_breadcrumbs.each_with_index do |crumb, index| %>
          <li>
            <%= link_to crumb[:name], crumb[:url], 
                       class: "hover:text-primary #{'text-gray-500' if index == blog_breadcrumbs.length - 1}" %>
          </li>
        <% end %>
      </ul>
    </nav>

    <article class="prose prose-lg max-w-none">
      <!-- Article Header -->
      <header class="mb-8">
        <!-- Categories -->
        <div class="flex flex-wrap gap-2 mb-4">
          <% @blog_post.blog_categories.each do |category| %>
            <%= blog_category_badge(category) %>
          <% end %>
        </div>

        <!-- Title -->
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 leading-tight mb-6">
          <%= @blog_post.title %>
        </h1>

        <!-- Meta Information -->
        <div class="flex items-center justify-between flex-wrap gap-4 py-4 border-y border-gray-200 mb-8">
          <div class="flex items-center space-x-4">
            <!-- Author -->
            <div class="flex items-center space-x-2">
              <%= blog_author_avatar(@blog_post, size: 'w-12 h-12') %>
              <div>
                <p class="font-medium text-gray-900"><%= @blog_post.author_name %></p>
                <p class="text-sm text-gray-600">Author</p>
              </div>
            </div>
            
            <!-- Publication Date -->
            <div class="text-sm text-gray-600">
              <p class="font-medium"><%= format_publish_date(@blog_post.published_at) %></p>
              <p><%= blog_post_reading_time(@blog_post) %> read</p>
            </div>
          </div>

          <!-- Share Buttons -->
          <div class="flex items-center space-x-2">
            <span class="text-sm text-gray-600 mr-2">Share:</span>
            <%= link_to blog_share_url(@blog_post, :twitter), 
                       target: '_blank', 
                       class: "btn btn-circle btn-sm hover:btn-primary",
                       title: "Share on Twitter" do %>
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
              </svg>
            <% end %>
            
            <%= link_to blog_share_url(@blog_post, :facebook), 
                       target: '_blank', 
                       class: "btn btn-circle btn-sm hover:btn-primary",
                       title: "Share on Facebook" do %>
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
              </svg>
            <% end %>
            
            <%= link_to blog_share_url(@blog_post, :linkedin), 
                       target: '_blank', 
                       class: "btn btn-circle btn-sm hover:btn-primary",
                       title: "Share on LinkedIn" do %>
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 01-2.063-2.065 2.064 2.064 0 112.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
            <% end %>
            
            <%= link_to blog_share_url(@blog_post, :whatsapp), 
                       target: '_blank', 
                       class: "btn btn-circle btn-sm hover:btn-primary",
                       title: "Share on WhatsApp" do %>
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
              </svg>
            <% end %>

            <!-- View Count -->
            <div class="flex items-center text-sm text-gray-600 ml-4">
              <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
              </svg>
              <%= @blog_post.views_count %> views
            </div>
          </div>
        </div>

        <!-- Featured Image -->
        <% if @blog_post.featured_image.attached? || @blog_post.og_image_url.present? %>
          <figure class="mb-8">
            <%= blog_post_featured_image(@blog_post, 
                                       class: "w-full h-96 object-cover rounded-lg shadow-lg",
                                       alt: @blog_post.title) %>
          </figure>
        <% end %>

        <!-- Excerpt -->
        <% if @blog_post.excerpt.present? %>
          <div class="text-xl text-gray-700 font-medium leading-relaxed mb-8 p-6 bg-gray-50 rounded-lg border-l-4 border-primary">
            <%= @blog_post.excerpt %>
          </div>
        <% end %>
      </header>

      <!-- Article Content -->
      <div class="prose prose-lg max-w-none mb-12">
        <%= render_blog_content(@blog_post.content) %>
      </div>

      <!-- Tags -->
      <% if @blog_post.blog_tags.any? %>
        <div class="mb-8">
          <h3 class="text-lg font-semibold text-gray-900 mb-3">Tags</h3>
          <div class="flex flex-wrap gap-2">
            <% @blog_post.blog_tags.each do |tag| %>
              <%= blog_tag_link(tag) %>
            <% end %>
          </div>
        </div>
      <% end %>

      <!-- Author Bio -->
      <div class="bg-gray-50 rounded-lg p-6 mb-12">
        <div class="flex items-start space-x-4">
          <%= blog_author_avatar(@blog_post, size: 'w-16 h-16') %>
          <div class="flex-1">
            <h3 class="text-lg font-semibold text-gray-900 mb-2">
              About <%= @blog_post.author_name %>
            </h3>
            <p class="text-gray-600 mb-3">
              <%= @blog_post.author.respond_to?(:bio) && @blog_post.author.bio.present? ? 
                  @blog_post.author.bio : 
                  "Educational content writer and expert at ShikshaGuru." %>
            </p>
            <div class="flex items-center space-x-4 text-sm text-gray-500">
              <span><%= @blog_post.author_type.titleize %></span>
            </div>
          </div>
        </div>
      </div>

      <!-- Share Section -->
      <div class="text-center py-8 border-t border-b border-gray-200 mb-12">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">
          Found this article helpful? Share it with others!
        </h3>
        <div class="flex justify-center space-x-4">
          <%= link_to blog_share_url(@blog_post, :twitter), 
                     target: '_blank', 
                     class: "btn btn-outline btn-sm" do %>
            Share on Twitter
          <% end %>
          <%= link_to blog_share_url(@blog_post, :facebook), 
                     target: '_blank', 
                     class: "btn btn-outline btn-sm" do %>
            Share on Facebook
          <% end %>
          <%= link_to blog_share_url(@blog_post, :linkedin), 
                     target: '_blank', 
                     class: "btn btn-outline btn-sm" do %>
            Share on LinkedIn
          <% end %>
        </div>
      </div>
    </article>

    <!-- Related Posts -->
    <% if @related_posts.any? %>
      <section class="mb-12">
        <h2 class="text-2xl font-bold text-gray-900 mb-8">Related Articles</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <% @related_posts.each do |post| %>
            <article class="card bg-base-100 shadow-md hover:shadow-lg transition-shadow">
              <figure class="aspect-video">
                <%= link_to blog_post_path(post.slug) do %>
                  <%= blog_post_featured_image(post, 
                                             class: "w-full h-full object-cover",
                                             alt: post.title) %>
                <% end %>
              </figure>
              <div class="card-body p-4">
                <h3 class="font-semibold text-sm hover:text-primary transition-colors">
                  <%= link_to post.title.truncate(60), blog_post_path(post.slug) %>
                </h3>
                <p class="text-gray-600 text-xs mt-2">
                  <%= format_publish_date(post.published_at, :short) %> • <%= blog_post_reading_time(post) %> read
                </p>
              </div>
            </article>
          <% end %>
        </div>
      </section>
    <% end %>

    <!-- Navigation -->
    <div class="flex justify-between items-center">
      <%= link_to blog_index_path, class: "btn btn-outline" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
        </svg>
        Back to Blog
      <% end %>
      
      <div class="text-center">
        <%= link_to "Subscribe to Updates", "#", class: "btn btn-primary" %>
      </div>
      
      <div class="text-right">
        <button onclick="window.scrollTo({top: 0, behavior: 'smooth'})" 
                class="btn btn-outline">
          Back to Top
          <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/>
          </svg>
        </button>
      </div>
    </div>
  </div>
</div>